<?xml version="1.0"?>
<odoo>

  <record id="view_form_student" model="ir.ui.view">
    <field name="name">Student Form</field>
    <field name="model">college.student</field>
    <field name="arch" type="xml">
      <form string="Student">
        <header>
          <button name="button_download_transcript" type="object"
            string="Download Transcript as MP3" class="oe_stat_button oe_read_only" icon="fa-download" />
        </header>
        <sheet>
          <group>
            <field name="name"/>
          </group>
              <group>
                <field name="id" attrs="{'invisible' :[('id', '=', False)]}"/>
                <field name="email" attrs="{'invisible' :[('id', '=', False)]}"/>
                <field name="program_id" />
                <field name="start_year" />
                <field name="student_modules" widget="one2many">
                    <tree editable="bottom">
                        <field name="module_id"/>
                        <field name="year"/>
                        <field name="mark"/>
                    </tree>
                </field>
              </group>
              <group attrs="{'invisible' :[('id', '!=', False)]}" >
                <field name="create_user"/>
              </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_tree_student" model="ir.ui.view">
    <field name="name">Student List</field>
    <field name="model">college.student</field>
    <field name="arch" type="xml">
      <tree>
        <field name="partner_id" />
        <field name="email"/>
        <field name="program_id" />
        <field name="amount_of_credits" />
      </tree>
    </field>
  </record>
</odoo>
