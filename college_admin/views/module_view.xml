<?xml version="1.0"?>
<odoo>

  <record id="view_form_module" model="ir.ui.view">
    <field name="name">Module Form</field>
    <field name="model">college.module</field>
    <field name="arch" type="xml">
      <form string="Module">
    <sheet>
          <group>
            <field name="name" />
            <field name="department_id" />
            <field name="time_frame" />
            <field name="credits" />
            <field name="module_students" widget="one2many">
                <tree editable="bottom">
                    <field name="student_id"/>
                    <field name="year"/>
                    <field name="mark"/>
                </tree>
            </field>
            <field name="lectured_classes" widget="one2many">
              <tree editable="bottom">
                  <field name="acadenic_staff_id"/>
              </tree>
            </field>
          </group>
    </sheet>
      </form>
    </field>
  </record>

  <record id="view_tree_module" model="ir.ui.view">
    <field name="name">Module List</field>
    <field name="model">college.module</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name" />
        <field name="time_frame" />
        <field name="credits" />
        <field name="amount_of_students" />
        <field name="program_id" />
      </tree>
    </field>
  </record>
</odoo>
